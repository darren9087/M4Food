<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M4Food.Views.ForgetPasswordPage"
             BackgroundColor="#F8F9FA"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <VerticalStackLayout x:Name="TitleSection" Spacing="8">
                <Label Text="Forgot Password?"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center"/>
                <Label Text="Enter your email address and we'll send you instructions to reset your password."
                       FontSize="14"
                       TextColor="#7F8C8D"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"/>
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="EmailForm" Spacing="15">

                <VerticalStackLayout Spacing="8">
                    <Label Text="Email Address"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <Border StrokeThickness="1"
                            Stroke="#E0E0E0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            Padding="15,12">
                        <Entry x:Name="EmailEntry"
                               Placeholder="Enter your email"
                               Keyboard="Email"
                               TextColor="#2C3E50"
                               PlaceholderColor="#95A5A6"/>
                    </Border>
                </VerticalStackLayout>

                <Border x:Name="SendButton"
                        StrokeThickness="0"
                        BackgroundColor="#E8C547"
                        StrokeShape="RoundRectangle 10"
                        Padding="0"
                        Margin="0,10,0,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSendClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="Send Reset Link"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Padding="0,15"/>
                </Border>

            </VerticalStackLayout>

            <HorizontalStackLayout x:Name="BackSection" 
                                   HorizontalOptions="Center" 
                                   Spacing="5"
                                   Margin="0,20,0,0">
                <Label Text="Remember your password?"
                       FontSize="14"
                       TextColor="#7F8C8D"/>
                <Label Text="Sign In"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#FF6B35">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackToLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>