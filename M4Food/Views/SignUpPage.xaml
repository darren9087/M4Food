<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M4Food.Views.SignUpPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FAF7F0" Offset="0.0" />
            <GradientStop Color="#F0EAD6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="*,Auto,*" Padding="30">

            <VerticalStackLayout Grid.Row="1" 
                                 Spacing="25"
                                 VerticalOptions="Center"
                                 Margin="0,40,0,40">

                
                <Border x:Name="LogoBorder"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 20"
                        Padding="50,30"
                        HorizontalOptions="Center"
                        Opacity="0"
                        TranslationY="30">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4" />
                    </Border.Shadow>
                    <Label FontSize="42"
                           FontAttributes="Bold"
                           HorizontalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="M4" TextColor="#2C2416" FontAttributes="Bold"/>
                                <Span Text="FO" TextColor="#E8C547" FontAttributes="Bold"/>
                                <Span Text="OD" TextColor="#2C2416" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Border>

                <!-- Welcome Text -->
                <VerticalStackLayout x:Name="WelcomeText"
                                     Spacing="12" 
                                     HorizontalOptions="Center"
                                     Opacity="0"
                                     TranslationY="30"
                                     Margin="0,30,0,0">
                    <Label Text="Sign Up"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#2C2416"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <!-- Sign Up -->
                <VerticalStackLayout x:Name="SignUpForm" 
                                     Spacing="15" 
                                     Margin="0,10,0,0"
                                     Opacity="0"
                                     TranslationY="30">

                    <!-- Username -->
                    <Border StrokeThickness="1"
                            Stroke="#E5DDD5"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 25"
                            HeightRequest="50"
                            Padding="15,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,4" />
                        </Border.Shadow>
                        <Grid ColumnDefinitions="Auto, *">
                            <Path Fill="#A89484"
                                  Aspect="Uniform"
                                  WidthRequest="20"
                                  Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                            <Entry x:Name="UsernameEntry"
                                   Grid.Column="1"
                                   Placeholder="Username"
                                   PlaceholderColor="#A89484"
                                   TextColor="#2C2416"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"
                                   AutomationId="usernameEntry"/>
                        </Grid>
                    </Border>

                    <!-- Email -->
                    <Border StrokeThickness="1"
                            Stroke="#E5DDD5"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 25"
                            HeightRequest="50"
                            Padding="15,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,4" />
                        </Border.Shadow>
                        <Grid ColumnDefinitions="Auto, *">
                            <Path Fill="#A89484"
                                  Aspect="Uniform"
                                  WidthRequest="20"
                                  Data="M20,8l-8,5-8-5V6l8,5,8-5m0-2H4C2.9,4,2,4.9,2,6v12c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V6C22,4.9,21.1,4,20,4z" />
                            <Entry x:Name="EmailEntry"
                                   Grid.Column="1"
                                   Placeholder="Email"
                                   PlaceholderColor="#A89484"
                                   TextColor="#2C2416"
                                   FontSize="16"
                                   Keyboard="Email"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"
                                   AutomationId="emailEntry"/>
                        </Grid>
                    </Border>

                    <!-- Create Password -->
                    <Border StrokeThickness="1"
                            Stroke="#E5DDD5"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 25"
                            HeightRequest="50"
                            Padding="15,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,4" />
                        </Border.Shadow>
                        <Grid ColumnDefinitions="Auto, *">
                            <Path Fill="#A89484"
                                  Aspect="Uniform"
                                  WidthRequest="20"
                                  Data="M12,17c1.1,0,2-0.9,2-2s-0.9-2-2-2s-2,0.9-2,2S10.9,17,12,17z M18,8h-1V6c0-2.8-2.2-5-5-5S7,3.2,7,6v2H6c-1.1,0-2,0.9-2,2v10c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V10C20,8.9,19.1,8,18,8z M9,6c0-1.7,1.3-3,3-3s3,1.3,3,3v2H9V6z" />
                            <Entry x:Name="PasswordEntry"
                                   Grid.Column="1"
                                   Placeholder="Create Password"
                                   PlaceholderColor="#A89484"
                                   TextColor="#2C2416"
                                   FontSize="16"
                                   IsPassword="True"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"
                                   AutomationId="passwordEntry"/>
                        </Grid>
                    </Border>

                    <!-- Confirm Password -->
                    <Border StrokeThickness="1"
                            Stroke="#E5DDD5"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 25"
                            HeightRequest="50"
                            Padding="15,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,4" />
                        </Border.Shadow>
                        <Grid ColumnDefinitions="Auto, *">
                            <Path Fill="#A89484"
                                  Aspect="Uniform"
                                  WidthRequest="20"
                                  Data="M12,17c1.1,0,2-0.9,2-2s-0.9-2-2-2s-2,0.9-2,2S10.9,17,12,17z M18,8h-1V6c0-2.8-2.2-5-5-5S7,3.2,7,6v2H6c-1.1,0-2,0.9-2,2v10c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V10C20,8.9,19.1,8,18,8z M9,6c0-1.7,1.3-3,3-3s3,1.3,3,3v2H9V6z" />
                            <Entry x:Name="ConfirmPasswordEntry"
                                   Grid.Column="1"
                                   Placeholder="Confirm Password"
                                   PlaceholderColor="#A89484"
                                   TextColor="#2C2416"
                                   FontSize="16"
                                   IsPassword="True"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"
                                   AutomationId="confirmPasswordEntry"/>
                        </Grid>
                    </Border>

                    <!-- Sign Up Button -->
                    <Button Text="Sign Up"
                            BackgroundColor="#E8C547"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="18"
                            CornerRadius="25"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            Clicked="OnSignUpClicked"/>

                    <!-- Already have account -->
                    <Label HorizontalTextAlignment="Center"
                           Margin="0,5,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Already have an account? " 
                                      FontSize="14" 
                                      TextColor="#A89484"/>
                                <Span Text="Sign In" 
                                      FontSize="14" 
                                      TextColor="#C67B5C"
                                      FontAttributes="Bold"
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSignInTapped"/>
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                </VerticalStackLayout>

                <!-- Separator -->
                <Grid x:Name="Separator"
                      ColumnDefinitions="*,Auto,*" 
                      Margin="0,10,0,10"
                      Opacity="0"
                      TranslationY="30">
                    <BoxView Grid.Column="0"
                             BackgroundColor="#E8C547"
                             HeightRequest="1"
                             VerticalOptions="Center"
                             CornerRadius="1"
                             Opacity="0.6"/>
                    <Label Grid.Column="1"
                           Text="OR"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#8B7355"
                           Opacity="0.6"
                           Margin="15,0"/>
                    <BoxView Grid.Column="2"
                             BackgroundColor="#E8C547"
                             HeightRequest="1"
                             VerticalOptions="Center"
                             CornerRadius="1"
                             Opacity="0.6"/>
                </Grid>

                <!-- Google Sign Up -->
                <VerticalStackLayout x:Name="GoogleButton"
                                     Spacing="15" 
                                     HorizontalOptions="Center"
                                     Opacity="0"
                                     TranslationY="30">
                    <Label Text="Sign up with Google"
                           FontSize="14"
                           TextColor="#A89484"
                           HorizontalTextAlignment="Center"
                           Opacity="0.8"/>

                    <Border BackgroundColor="White"
                            StrokeThickness="2"
                            Stroke="#E5DDD5"
                            StrokeShape="RoundRectangle 40"
                            WidthRequest="80"
                            HeightRequest="80"
                            HorizontalOptions="Center">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.15" Radius="20" Offset="0,4" />
                        </Border.Shadow>
                        <Grid>
                            <Image Source="google_icon.jpg"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnGoogleSignUpTapped"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Footer -->
                <VerticalStackLayout x:Name="Footer"
                                     Spacing="10"
                                     HorizontalOptions="Center"
                                     Margin="0,20,0,0"
                                     Opacity="0"
                                     TranslationY="30">

                    <Label LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="By signing up, you agree to our " 
                                      FontSize="11" 
                                      TextColor="#A89484"/>
                                <Span Text="Terms" 
                                      FontSize="11" 
                                      TextColor="#C67B5C"
                                      TextDecorations="Underline"/>
                                <Span Text=" and " 
                                      FontSize="11" 
                                      TextColor="#A89484"/>
                                <Span Text="Privacy Policy" 
                                      FontSize="11" 
                                      TextColor="#C67B5C"
                                      TextDecorations="Underline"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>

            </VerticalStackLayout>

        </Grid>
    </ScrollView>

</ContentPage>